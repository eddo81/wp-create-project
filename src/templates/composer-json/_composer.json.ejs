{
  "name": "<%= projectAuthor.name %>/<%= projectPackageName %>",
  "type": "wordpress-<%= projectType %>",<% if(projectLicense !== undefined) { %>
  "license": "<%= license.type %>",<% } if(projectDescription !== '') { %>
  "description": "<%= description %>",<% } %>
  "keywords": ["wordpress, composer"],
  "autoload": {
    "psr-4": {
      "<%= projectNamespace %>\\": ["inc"]
    }
  },
  "config": {
    "vendor-dir": "vendor"
  },
  "require": {
    "php": ">=7"
  },
  "scripts": {<% if(phpcs !== false) { %>
    "test": ["phpcs"]<% } %>
  },
  "require-dev": {<% if(phpcs !== false) { %>
    "squizlabs/php_codesniffer": "^3.4",
    "wp-coding-standards/wpcs": "^2.1",
    "phpcompatibility/phpcompatibility-wp": "^2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"<% } %>
  }
}
